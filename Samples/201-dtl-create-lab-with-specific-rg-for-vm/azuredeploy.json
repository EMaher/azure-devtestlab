{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "newLabName": {
      "type": "string",
      "metadata": {
        "description": "The name of the new lab instance to be created"
      }
    },
    "vmResourceGroupId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The resource id of the resource group in which to lab virtual machines should be created.  If not specified lab resource group will be used."
      }
    }
  },
  "variables": {
    "labVirtualNetworkName": "[concat('Dtl', parameters('newLabName'))]",
    "newVmRgId": "[if(empty(parameters('vmResourceGroupId')), resourceGroup().id, parameters('vmResourceGroupId'))]"
  },
  "resources": [
    {
      "apiVersion": "2018-10-15-preview",
      "type": "Microsoft.DevTestLab/labs",
      "name": "[parameters('newLabName')]",
      "location": "[resourceGroup().location]",
      "resources": [
        {
          "apiVersion": "2018-10-15-preview",
          "name": "[variables('labVirtualNetworkName')]",
          "type": "virtualNetworks",
          "dependsOn": [
            "[resourceId('Microsoft.DevTestLab/labs', parameters('newLabName'))]"
          ]
        }
      ],
      "properties": {
        "vmCreationResourceGroupId": "[variables('newVmRgId')]"
      }
    }
  ],
  "outputs": {
    "labId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DevTestLab/labs', parameters('newLabName'))]"
    },
    "vmResourceGroupId": {
      "type": "string",
      "value": "[variables('newVmRgId')]"
    }
  }
}
